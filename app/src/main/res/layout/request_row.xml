<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:layout_margin="7dp"
    android:elevation="90dp"
    android:id="@+id/recycler_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#e9e9e9">

        <TextView
            android:id="@+id/vTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#648486482"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/fieldStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="realizado"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:background="@color/cardview_dark_background"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/fieldSolicitante"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Pedro Cliente"
            android:textAlignment="textStart"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"
            />



        <TextView
            android:id="@+id/fieldOrigem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origem: Praça Marisa Marques 44, apto 105"
            android:textAlignment="textStart"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/fieldDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destino: R. Professor Ferreira Paulino 190"
            android:textAlignment="textStart"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/fieldDetalhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
            android:textAlignment="textStart"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c2c2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tempoEntregaDsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/distanciaDsc"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="15dp"
                android:text="Tempo de entrega"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/fieldTempoEntrega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tempoEntregaDsc"
                android:layout_below="@+id/tempoEntregaDsc"
                android:text="28 min"
                android:textColor="#000"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/distanciaDsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Distância"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/fieldDistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/distanciaDsc"
                android:layout_below="@+id/distanciaDsc"
                android:text="6 Km"
                android:textColor="#000"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/valorDsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/distanciaDsc"
                android:layout_marginLeft="90dp"
                android:text="Valor"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/fieldValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/valorDsc"
                android:layout_below="@+id/valorDsc"
                android:layout_marginRight="15dp"
                android:text="R$ 15,00"
                android:textColor="#000"
                android:textSize="22dp" />

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:text="Detalhes"
            android:id="@+id/ver_mais"/>

        <TextView
            android:id="@+id/fieldSolicitanteID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Pedro Cliente"
            android:visibility="invisible"
            />



    </LinearLayout>

</android.support.v7.widget.CardView>