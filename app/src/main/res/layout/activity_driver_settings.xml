            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imagemPerfil"
            android:layout_marginStart="118dp"
            android:layout_marginTop="120dp"
            android:text="email@email.com" />

    </RelativeLayout>

